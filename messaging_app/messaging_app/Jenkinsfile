pipeline {
    agent any
    
    environment {
        VENV = "${WORKSPACE}/venv"
    }
    
    stages {
        stage('Checkout') {
            steps {
                cleanWs()  // Clean workspace before fetching the code
                git branch: 'master', // Update this if your default branch is different (e.g., 'master')
                    url: 'https://github.com/steve9948/alx-backend-python.git'
            }
        }
        
        stage('Setup Python') {
            steps {
                sh '''
                    python3 -m venv ${VENV}
                    . ${VENV}/bin/activate
                    cd messaging-app/messaging_app
                    pip install -r requirements.txt
                    pip install pytest pytest-html
                '''
            }
        }
        
        stage('Run Tests') {
            steps {
                sh '''
                    . ${VENV}/bin/activate
                    cd messaging-app/messaging_app
                    pytest --html=test-reports/report.html --self-contained-html
                '''
            }
            post {
                always {
                    publishHTML([
                        allowMissing: false,
                        alwaysLinkToLastBuild: true,
                        keepAll: true,
                        reportDir: 'messaging-app/messaging_app/test-reports',
                        reportFiles: 'report.html',
                        reportName: 'Test Report'
                    ])
                }
            }
        }
    }
    
    post {
        always {
            cleanWs()  // Clean workspace after build
        }
    }
}
